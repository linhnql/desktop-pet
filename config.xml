<?xml version="1.0" ?><config>
    <!-- Unless otherwise specified, this is the pet that will show up when the program runs -->
    <defualt_pet>totoro</defualt_pet>
    <!-- Whether or not to keep the pet on top of other windows -->
    <force_topmost>true</force_topmost>
    <!-- Whether or not to run preprocessing on the images when opening them-->
    <should_run_preprocessing>false</should_run_preprocessing>
    <!-- Animations/Pets that can be used by the program -->
    <pets>
        <pet name="totoro">
            <!-- Offset from the bottom of the screen in px -->
            <offset>35</offset>
            <!-- This background color is keyed out
            to make a transparent window as windows has no straight alpha channel,
            so this should match the background color of your source images/gif -->
            <bg_color>#000</bg_color>
            <!-- Size of the pet (animation frames) are scaled
            to match this scale -->
            <resolution>
                <x>100</x>
                <y>100</y>
            </resolution>
        </pet>
    </pets>
</config>